{
  "format_version": "1.21.0",
  "minecraft:entity": {
    "description": {
      "identifier": "dt:centurion_action_x",
      "spawn_category": "creature",
      "is_spawnable": true,
      "is_summonable": true
    },
    "component_groups": {
      "dt:basic_behavior": {
        "minecraft:fire_immune": {},
        "minecraft:knockback_resistance": {
          "max": 1,
          "value": 1
        },
        "minecraft:game_event_movement_tracking": {
          "emit_flap": false,
          "emit_move": true,
          "emit_swim": true
        },
        "minecraft:navigation.walk": {
          "can_path_over_water": true,
          "avoid_damage_blocks": true
        },
        "minecraft:is_hidden_when_invisible": {},
        "minecraft:movement.basic": {},
        "minecraft:jump.static": {},
        "minecraft:can_climb": {},
        "minecraft:physics": {},
        "minecraft:conditional_bandwidth_optimization": {},
        "minecraft:behavior.random_stroll": {
          "priority": 6,
          "speed_multiplier": 2
        },
        "minecraft:behavior.look_at_player": {
          "priority": 7,
          "target_distance": 6,
          "probability": 0.02
        },
        "minecraft:behavior.random_look_around": {
          "priority": 8
        }
      },
      "dt:switcher_range": {
        "minecraft:target_nearby_sensor": {
          "inside_range": 4.0,
          "outside_range": 5.0,
          "must_see": true,
          "on_inside_range": {
            "event": "dt:melee_swap",
            "target": "self"
          },
          "on_outside_range": {
            "event": "dt:ranged_swap",
            "target": "self"
          }
        }
      },
      "dt:melee_components": {
        "minecraft:attack": {
          "damage": 6
        },
        "minecraft:behavior.melee_attack": {
          "priority": 3
        },
        "minecraft:variant": {
          "value": 0
        }
      },
      "dt:ranged_components": {
        "minecraft:shooter": {
          "def": "minecraft:wither_skull_dangerous"
        },
        "minecraft:behavior.ranged_attack": {
          "priority": 3,
          "ranged_fov": 90.0,
          "attack_interval_min": 1.0,
          "attack_interval_max": 3.0,
          "attack_radius": 64
        },
        "minecraft:variant": {
          "value": 1
        }
      },
      "dt:carry_entity": {
        "minecraft:rideable": {
          "seat_count": 2,
          "family_types": [
            "player",
            "villager"
          ],
          "interact_text": "Enter",
          "seats": [
            {
              "min_rider_count": 0,
              "max_rider_count": 2,
              "position": [
                -0.65,
                2.5,
                -0.9
              ],
              "third_person_camera_radius": 8.0,
              "camera_relax_distance_smoothing": 6.0
            },
            {
              "min_rider_count": 1,
              "max_rider_count": 2,
              "position": [
                0,
                1.9,
                -2.3
              ],
              "rotate_rider_by": 180,
              "third_person_camera_radius": 8.0,
              "camera_relax_distance_smoothing": 6.0
            }
          ]
        }
      }
    },
    "components": {
      "minecraft:experience_reward": {
        "on_death": 100
      },
      "minecraft:health": {
        "value": 400,
        "max": 400
      },
      "minecraft:custom_hit_test": {
        "hitboxes": [
          {
            "width": 4,
            "height": 1,
            "pivot": [
              0,
              2,
              0
            ]
          }
        ]
      },
      "minecraft:collision_box": {
        "height": 4,
        "width": 1
      },
      "minecraft:movement": {
        "value": 0.3
      },
      "minecraft:follow_range": {
        "value": 75,
        "max": 75
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "must_see": true,
        "entity_types": [
          {
            "filters": {
              "all_of": [
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "monster"
                }
              ]
            },
            "max_dist": 75,
            "walk_speed_multiplier": 1.8
          }
        ]
      }
    },
    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "dt:basic_behavior",
            "dt:switcher_range",
            "dt:carry_entity"
          ]
        }
      },
      "dt:melee_swap": {
        "remove": {
          "component_groups": [
            "dt:ranged_components"
          ]
        },
        "add": {
          "component_groups": [
            "dt:melee_components"
          ]
        }
      },
      "dt:ranged_swap": {
        "remove": {
          "component_groups": [
            "dt:melee_components"
          ]
        },
        "add": {
          "component_groups": [
            "dt:ranged_components"
          ]
        }
      }
    }
  }
}