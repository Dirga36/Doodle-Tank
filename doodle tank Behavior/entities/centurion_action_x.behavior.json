{
  "format_version": "1.21.0",
  "minecraft:entity": {
    "description": {
      "identifier": "dt:centurion_action_x",
      "spawn_category": "creature",
      "is_spawnable": true,
      "is_summonable": true
    },
    "component_groups": {
      "dt:melee_components": {
        "minecraft:attack": {
          "damage": 6
        },
        "minecraft:behavior.melee_attack": {
          "priority": 3
        },
        "minecraft:variant": {
          "value": 0
        }
      },
      "dt:ranged_components": {
        "minecraft:shooter": {
          "def": "minecraft:fireball"
        },
        "minecraft:behavior.ranged_attack": {
          "priority": 3,
          "ranged_fov": 90.0,
          "attack_interval_min": 1.0,
          "attack_interval_max": 3.0,
          "attack_radius": 64
        },
        "minecraft:variant": {
          "value": 1
        }
      },
      "dt:switcher_range": {
        "minecraft:target_nearby_sensor": {
          "inside_range": 4.0,
          "outside_range": 5.0,
          "must_see": true,
          "on_inside_range": { //When target is within 4 blocks range, trigger "dt:melee_swap" event
            "event": "dt:melee_swap",
            "target": "self"
          },
          "on_outside_range": { //When target is beyond 5 blocks range, trigger "dt:ranged_swap" event
            "event": "dt:ranged_swap",
            "target": "self"
          }
        }
      }
    },
    "components": {
      "minecraft:experience_reward": {
        "on_death": 100
      },
      "minecraft:health": {
        "value": 400,
        "max": 400
      },
      "minecraft:custom_hit_test": {
        "hitboxes": [
          {
            "width": 4.5,
            "height": 3,
            "pivot": [
              0,
              2.4,
              0.55
            ]
          }
        ]
      },
      "minecraft:collision_box": {
        "height": 4.5,
        "width": 3.0
      },
      "minecraft:movement": {
        "value": 0.3
      },
      "minecraft:follow_range": {
        "value": 64,
        "max": 64
      },
      "minecraft:game_event_movement_tracking": {
        "emit_flap": false,
        "emit_move": true,
        "emit_swim": true
      }
    },
    "events": {
      "dt:melee_swap": { //When triggered, adds component group for ranged and removes melee component group
        "remove": {
          "component_groups": [
            "dt:ranged_components"
          ]
        },
        "add": {
          "component_groups": [
            "dt:melee_components"
          ]
        }
      },
      "dt:ranged_swap": { //When triggered, adds component group for melee and removes ranged component group
        "remove": {
          "component_groups": [
            "dt:melee_components"
          ]
        },
        "add": {
          "component_groups": [
            "dt:ranged_components"
          ]
        }
      }
    }
  }
}