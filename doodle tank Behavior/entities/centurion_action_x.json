      "spawn_category": "creature",
      "is_spawnable": true,
      "is_summonable": true
    },
    "component_groups": {},
    "components": {
      // stats
      "minecraft:experience_reward": {
        "on_death": "query.last_hit_by_player ? 100 + (query.equipment_count * Math.Random(1,3)) : 0"
      },
      "minecraft:health": {
        "value": 200,
        "max": 200
      },
      "minecraft:custom_hit_test": {
        "hitboxes": [
          {
            "width": 4.5,
            "height": 3,
            "pivot": [0, 2.4, 0.55]
          }
