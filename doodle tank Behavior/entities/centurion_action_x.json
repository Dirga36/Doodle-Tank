      // special components
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 3,
        "entity_types": [
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "cow"
            },
            "max_dist": 64
          }
        ],
        "must_see": true
      }
    },
    "events": {
      "minecraft:entity_attack": {
        "sequence": [
          {
            "set_variable": {
              "attack_state": true
            }
          }
        ]
      }
