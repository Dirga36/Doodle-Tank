      },
      "minecraft:collision_box": {
        "height": 4.5,
        "width": 3.0
      },
      "minecraft:movement": {
        "value": 0.25
      },
      "minecraft:follow_range": {
        "value": 64,
        "max": 64
      },

      // general tank components
      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": 0
      },
      "minecraft:fire_immune": {},
      "minecraft:nameable": {},
      "minecraft:navigation.walk": {
        "can_walk": true
      },
      "minecraft:movement.basic": {
        "max_turn": 30
      },
      "minecraft:behavior.random_stroll": {
        "priority": 6,
        "xz_dist": 32
      },
      "minecraft:behavior.look_at_player": {
        "priority": 7,
        "look_distance": 6,
