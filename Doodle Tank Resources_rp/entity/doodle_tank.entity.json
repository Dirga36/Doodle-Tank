      "animations": {
        "gun_fire": "animation.doodle_tank.gun_fire",
        "gun_turn_down": "animation.doodle_tank.gun_turn_down",
        "gun_turn_up": "animation.doodle_tank.gun_turn_up",
        "move": "animation.doodle_tank.move",
        "turret_rotation": "animation.doodle_tank.turret_rotation"
      },
      "geometry": {
        "default": "geometry.doodle_tank"
      },
