{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.tank.shooting": {
      "states": {
        "default": {
          "transitions": [
            {
              "shooting": "variable.attack_time > 0"
            }
          ]
        },
        "shooting": {
          "animations": [
            "shoot"
          ],
          "transitions": [
            {
              "default": "variable.attack_time == 0"
            }
          ],
          "blend_transition": 0.1
        }
      }
    },
    "controller.animation.tank.smoking": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            {
              "smoking": "query.health / query.max_health <= 0.25"
            }
          ]
        },
        "smoking": {
          "animations": [
            "engine_smoke"
          ],
          "transitions": [
            {
              "default": "query.health / query.max_health > 0.25"
            }
          ],
          "blend_transition": 0.1
        }
      }
    }
  }
}