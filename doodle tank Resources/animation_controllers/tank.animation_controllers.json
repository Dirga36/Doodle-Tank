{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.tank.shooting": {
      "states": {
        "default": {
          "transitions": [
            {
              "shooting": "variable.attack_time > 0"
            }
          ]
        },
        "shooting": {
          "animations": [
            "shoot"
          ],
          "transitions": [
            {
              "default": "variable.attack_time == 0"
            }
          ],
          "blend_transition": 0.1
        }
      }
    },
    "controller.animation.tank.punching": {
      "states": {
        "default": {
          "transitions": [
            {
              "punching": "query.is_delayed_attacking"
            }
          ]
        },
        "punching": {
          "animations": [
            "punch"
          ],
          "transitions": [
            {
              "default": "!query.is_delayed_attacking"
            }
          ],
          "blend_transition": 0.1
        }
      }
    }
  }
}