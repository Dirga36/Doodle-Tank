{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.attacks.shoot": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"shooting": "variable.attack_time > 0;"
						}
					]
				},
				"shooting": {
					"animations": [
						"shoot"
					],
					"transitions": [
						{
							"default": "variable.attack_time <= 0;"
						}
					],
					"on_entry": [
						"variable.attack_time = 0.1;"
					]
				}
			}
		},
		"controller.animation.attacks.melee_attack": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"shooting": "variable.attack_time > 0;"
						}
					]
				},
				"shooting": {
					"animations": [
						"melee_attack"
					],
					"transitions": [
						{
							"default": "variable.attack_time <= 0;"
						}
					],
					"on_entry": [
						"variable.attack_time = 0.1;"
					]
				}
			}
		}
	}
}