{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.view": {
      "arrays": {
        "textures": {
          "Array.health_conditions": [
            "Texture.full",
            "Texture.high",
            "Texture.low",
            "Texture.empty"
          ],
          "Array.attack_modes": [
            "Texture.melee_mode",
            "Texture.ranged_mode"
          ]
        },
        "geometries": {
          "Array.health_conditions": [
            "Geometry.full",
            "Geometry.high",
            "Geometry.low",
            "Geometry.empty"
          ]
        }
      },
      "geometry": "Array.health_conditions[math.clamp(math.floor((1.0 - (query.health / query.max_health)) * 4.0), 0, 3)]",
      "materials": [
        {
          "*": "Material.view_layer"
        }
      ],
      "textures": [
        "Texture.default",
        "Array.health_conditions[math.clamp(math.floor((1.0 - (query.health / query.max_health)) * 4.0), 0, 3)]",
        "Array.attack_modes[query.variant]"
      ],
      "is_hurt_color": {},
      "on_fire_color": {},
      "ignore_lighting": true
    }
  }
}